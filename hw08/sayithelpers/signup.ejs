<%- include("partials/header") %>

<main class="grid_6 signup-page">
  <h2>Create a New Account</h2>

  <% if (errors && errors.length > 0) { %>
  <div class="error">
    <% errors.forEach(err => { %>
    <p><%= err.msg %></p>
    <% }) %>
  </div>
  <% } %>

  <form class="authpage" method="post" action="/signup">
    <label for="screen_name">Screen Name</label><br />
    <input type="text" id="screen_name" name="screen_name" value="<%= formData?.screen_name || '' %>" />
    <br /><br />

    <label for="email">Email</label><br />
    <input type="email" id="email" name="email" value="<%= formData?.email || '' %>" />
    <br /><br />

    <label for="password">Password</label><br />
    <input type="password" id="password" name="password" />
    <br /><br />

    <label for="password2">Confirm Password</label><br />
    <input type="password" id="password2" name="password2" />
    <br /><br />

    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <button class="big-button">Create Account</button>
  </form>
</main>

<%- include("partials/footer") %>
